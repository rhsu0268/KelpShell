<!DOCTYPE html>
<html lang="en" ng-app="musicMixer">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Music Mixer</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.11.0/jquery-ui.min.js"></script>
    <!--<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/rzslider.css"/>
    <link rel='stylesheet' href='/stylesheets/composer.css'/>
    <link rel='stylesheet' href='/stylesheets/musicMixer.css'/>
  </head>

  <body>
    <!-- header -->
    <div ng-include src="'/header/header.ejs'"></div>

    <div class="container">

    <div>
      <h1>Music Mixer</h1>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <h2>Tunes List</h2>

            <div class="panel panel-default">
              <div class="panel-body">
                <h3>My Lovely Tunes</h3>

                    <ul>
                        <li><i>Feeling Good</i> Michael Buble</li>
                        <li><i>Uptown Funk</i> Mark Ronson</li>
                        <li><i>In the Summer</i> Calvin Harris</li>
                        <li><i>All of Me</i> John Legend</li>
                    </ul>
                    <section ng-controller="tuneSelectCtrl">


                        <p>
                            You've selected:
                            <span ng-hide="selected">none</span>
                            <span class="selected-tunes" ng-repeat="tune in selected"> {{tune.title}}</span>
                        </p>

                        <ul id="selectable"
                            selectable="selection"
                            selectable-list="tunes"
                            selectable-out="selected"
                            selectable-events="{start:'selectionStart($selected)', stop:'selectionStop($selected)'}">
                            <li class="ui-widget-content" ng-repeat="tune in tunes"><i>{{tune.title}}</i> {{tune.artist}}</li>
                        </ul>

                    </section>
              </div>
            </div>

        </div>
        <div class="col-lg-6">
            <div ng-controller="musicMixerCtrl">
                <h2>Controls</h2>
                    <button type="button" class="btn btn-primary" ng-click="playSong()">Play Song</button>
                    <button type="button" class="btn btn-danger" ng-click="stopSong()">Stop Song</button>
                    <button type="button" class="btn btn-danger" ng-click="playEffect()">Play Effect</button>
            </div>
        </div>
    </div>




    <br><br>
    </div>
  </body>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-slider/4.0.2/rzslider.min.js"></script>
    <!-- Load the (very useful script) that helps you load audio files. -->
    <script src="http://www.html5rocks.com/en/tutorials/webaudio/intro/js/buffer-loader.js"></script>
    <!-- Band.JS Files -->
    <script src="//cdn.rawgit.com/meenie/band.js/1.1.2/dist/band.min.js"></script>

    <script src="/javascripts/musicMixer.js"></script>
    <script src="/javascripts/ngSelectable.js"></script>
    <script src="/javascripts/Pizzicato.js"></script>

</html>
