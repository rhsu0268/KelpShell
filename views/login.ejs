  <body>
    <!-- header -->
    <div ng-include src="'/header/header.ejs'"></div>


    <div>
        <div class="container">
            <h1>Login</h1>
            <div ng-show="error" class="alert alert-danger row">
                <span>{{ error.message }}</span>
            </div>
            <div ng-controller="LoginCtrl">
                <form>
                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input type="email" class="form-control" id="email" placeholder="Email" ng-model="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" ng-model="password">
                    </div>
                    <button type="submit" class="btn btn-default" ng-click="login()">Submit</button>
                    <p ng-show="messagePresent">Message: <strong>{{ message }}</strong></p>
                    <p ng-show="errorPresent">Error: <strong>{{ error }}</strong></p>
                </form>
            </div>
            <br>
