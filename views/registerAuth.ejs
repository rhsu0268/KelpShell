  <body>
    <!-- header -->
    <div ng-include src="'/header/header.ejs'"></div>


    <div>
        <div class="container">


            <div class="col-md-6 col-md-offset-3" ng-controller="RegisterCtrl">
                <h1>Register</h1>
                <div ng-show="error" class="alert alert-danger row">
                    <span>{{ error.message }}</span>
                </div>
                <form ng-submit="register()" style="margin-top:30px;">
                    <div class="form-group">
                        <label for="username">Username: </label>
                        <input type="text" class="form-control" id="email" placeholder="Username" ng-model="user.username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" ng-model="user.password">
                    </div>
                    <div class="form-group">
                        <label for="password">Password (Confirmation)</label>
                        <input type="password" class="form-control" id="password" placeholder="Password (Confirmation)" ng-model="user.confirmationPassword">
                    </div>
                    <button type="submit" class="btn btn-default">Register</button>
                    <!--<p ng-show="messagePresent">Message: <strong>{{ message }}</strong></p>-->
                    <!--<p ng-show="errorPresent">Error: <strong>{{ error }}</strong></p>-->
                </form>
            </div>
