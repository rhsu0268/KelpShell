<script src="/header/controllers/navCtrl.js"></script>
<script src="/javascripts/composer/controllers/uploadCtrl.js"></script>
<script src="/javascripts/composer/controllers/padsCtrl.js"></script>
<script src="/javascripts/composer/controllers/loopsCtrl.js"></script>
<script src="/javascripts/composer/controllers/recordCtrl.js"></script>
<script src="/javascripts/composer/helpers/kickHelpers.js"></script>
<script src="/javascripts/composer/helpers/snareHelpers.js"></script>
<script src="/javascripts/composer/helpers/tinHelpers.js"></script>
<script src="/javascripts/composer/helpers/hatHelpers.js"></script>
