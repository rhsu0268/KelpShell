<!DOCTYPE html>
<html lang="en" ng-app="composer">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Composer</title>
    <!--<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>-->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/stylesheets/rzslider.css"/>
    <link rel='stylesheet' href='/stylesheets/composer.css'/>
  </head>

  <body>
    <!-- header -->
    <div ng-include src="'/header/header.ejs'"></div>


    <div>
        <div class="container">
            <h1>Composer</h1>


            <div class="container">
                <div class="row" ng-controller="padsCtrl">
                    <div class="col-lg-4">
                        <button type="button" class="btn btn-primary" id="pad1" ng-click="playKick()">Kick</button>
                        <button type="button" class="btn btn-primary" id="pad2" ng-click="playSnare()">Snare</button>
                        <br><br>
                        <button type="button" class="btn btn-primary" id="pad3" ng-click="playTin()">Tin</button>
                        <button type="button" class="btn btn-primary" id="pad4" ng-click="playHat()">Hat</button>

                    </div>
                    <div class="col-lg-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h1>Kick</h1>
                                <button type="button" class="btn btn-primary" id="loopButton1" ng-click="playLoop1()">Loop</button>
                                <h3>Frequency</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderKickFrequency.value"
                                   rz-slider-options="sliderKickFrequency.options"></rzslider>
                                </div>
                                <h3>Volume</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderKickVolume.value"
                                   rz-slider-options="sliderKickVolume.options"></rzslider>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h1>Snare</h1>
                                <button type="button" class="btn btn-primary" id="loopButton1" ng-click="playLoop2()">Loop</button>
                                <h3>Frequency</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderSnareFrequency.value"
                                   rz-slider-options="sliderSnareFrequency.options"></rzslider>
                                </div>
                                <h3>Volume</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderSnareVolume.value"
                                   rz-slider-options="sliderSnareVolume.options"></rzslider>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h1>Tin</h1>
                                <button type="button" class="btn btn-primary" id="loopButton1" ng-click="playLoop3()">Loop</button>
                                <h3>Frequency</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderTinFrequency.value"
                                   rz-slider-options="sliderTinFrequency.options"></rzslider>
                                </div>
                                <h3>Volume</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderTinVolume.value"
                                   rz-slider-options="sliderTinVolume.options"></rzslider>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <h1>Hat</h1>
                                <button type="button" class="btn btn-primary" id="loopButton1" ng-click="playLoop4()">Loop</button>
                                <h3>Frequency</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderHatFrequency.value"
                                   rz-slider-options="sliderHatFrequency.options"></rzslider>
                                </div>
                                <h3>Volume</h3>
                                <div>
                                  <rzslider
                                   rz-slider-model="sliderHatVolume.value"
                                   rz-slider-options="sliderHatVolume.options"></rzslider>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row" ng-controller="visualizationAndRecordCtrl">
                    <div class="col-lg-8">
                        <h1>Visualization</h1>
                        <div id="waveform"></div>
                        <button class="btn btn-primary" ng-click="playPause()">
                           <i class="glyphicon glyphicon-play"></i>
                           Play
                        </button>
                    </div>
                    <div class="col-lg-4">
                        <h1>Controls</h1>
                        <button type="button" class="btn btn-primary" id="play">Play</button>
                        <button type="button" class="btn btn-primary" id="pause">Pause</button>
                        <button type="button" class="btn btn-primary" id="stop">Stop</button>
                        <button type="button" class="btn btn-primary" id="record" ng-click="record()">Record</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
  </body>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-slider/4.0.2/rzslider.min.js"></script>
    <!-- Load the (very useful script) that helps you load audio files. -->
    <script src="http://www.html5rocks.com/en/tutorials/webaudio/intro/js/buffer-loader.js"></script>
    <!-- Band.JS Files -->
    <script src="//cdn.rawgit.com/meenie/band.js/1.1.2/dist/band.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.0.52/wavesurfer.min.js"></script>

    <script src="/javascripts/composer.js"></script>
    <script src="/javascripts/recorder.js"></script>

</html>
